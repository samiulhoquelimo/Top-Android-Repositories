<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/depth_400</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="viewInflaterClass">androidx.appcompat.app.AppCompatViewInflater</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="MaterialCardView">
        <item name="cardCornerRadius">@dimen/_6sdp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#40000000</item>
    </style>

</resources>